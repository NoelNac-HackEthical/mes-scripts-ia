#!/usr/bin/env bash
# NAME=mon-nmap-ia
# VERSION=11.0.0
# DESCRIPTION=Version ultra-minimaliste et ultra-robuste
# Utilisation : mon-nmap-ia [--debug] <IP|HOST>

set -euo pipefail

# Couleurs basiques
GREEN='\033[1;32m'
YELLOW='\033[1;33m'
BLUE='\033[1;34m'
RED='\033[1;31m'
NC='\033[0m'

# Vérification de nmap
command -v nmap >/dev/null 2>&1 || { echo -e "${RED}nmap manquant${NC}"; exit 1; }

# Gestion du flag --debug
DEBUG=false
if [[ "$1" == "--debug" ]]; then
  DEBUG=true
  shift
fi

TARGET="$1"
[[ -z "$TARGET" ]] && { echo -e "${RED}Usage: $0 [--debug] <IP|HOST>${NC}"; exit 1; }

# Dossier de sortie
DOSSIER="nmap_${TARGET}"
mkdir -p "$DOSSIER"
FULL_SCAN="$DOSSIER/nmap_full.txt"

# Initialisation
: > "$FULL_SCAN"

# Fonction ultra-simple pour exécuter un scan
run_scan() {
  local step=$1
  local description=$2
  local cmd=$3
  local output=$4

  echo -e "${BLUE}[${step}] ${description}...${NC}"
  if $DEBUG; then echo -e "${BLUE}[DEBUG]${NC} $cmd"; fi

  # Exécution directe et simple
  eval "$cmd > $output 2>&1"

  # Ajout au fichier complet
  echo -e "\n\n#==============================================#" >> "$FULL_SCAN"
  echo -e "# ${description}" >> "$FULL_SCAN"
  echo -e "#==============================================#\n" >> "$FULL_SCAN"
  cat "$output" >> "$FULL_SCAN" 2>/dev/null || echo "Aucun résultat" >> "$FULL_SCAN"
  echo -e "${GREEN}OK: ${output}${NC}"
}

# 1. Scan TCP complet
run_scan 1 "Scan TCP complet" \
          "nmap -Pn -p- --min-rate 10000 -T4 --max-retries 3 -oN ${DOSSIER}/1-tcp_scan.txt $TARGET" \
          "${DOSSIER}/1-tcp_scan.txt"

# Extraction des ports
PORTS=$(grep -E '^[0-9]+/tcp.*open' "${DOSSIER}/1-tcp_scan.txt" 2>/dev/null | cut -d'/' -f1 | sort -u | tr '\n' ',' | sed 's/,$//')
if [[ -z "$PORTS" ]]; then
  echo -e "${RED}Aucun port TCP ouvert détecté${NC}"
  exit 1
fi
echo -e "${GREEN}Ports ouverts: $PORTS${NC}"

# 2. Scan agressif
run_scan 2 "Scan agressif" \
          "nmap -Pn -A -T4 -p$PORTS -oN ${DOSSIER}/2-aggressive_scan.txt $TARGET" \
          "${DOSSIER}/2-aggressive_scan.txt"

# 3. Scan UDP
run_scan 3 "Scan UDP" \
          "nmap -Pn -sU --top-ports 20 -T4 -oN ${DOSSIER}/3-udp_scan.txt $TARGET" \
          "${DOSSIER}/3-udp_scan.txt"

# 4. NSE WEB
WEB_SCRIPTS="http-title,http-enum,http-methods,http-headers"
run_scan 4 "NSE WEB" \
          "nmap -Pn -sV -p$PORTS --script=\"$WEB_SCRIPTS\" -T4 -oN ${DOSSIER}/4-nse-web.txt $TARGET" \
          "${DOSSIER}/4-nse-web.txt"

# 5. NSE SSL (si 443)
if echo "$PORTS" | grep -q "443"; then
  run_scan 5 "NSE SSL" \
            "nmap -Pn -sV -p443 --script=\"ssl-enum-ciphers,ssl-cert,ssl-heartbleed\" -T4 -oN ${DOSSIER}/5-nse-ssl.txt $TARGET" \
            "${DOSSIER}/5-nse-ssl.txt"
else
  echo -e "${YELLOW}Pas de port SSL (443)${NC}"
fi

# 6. NSE VULN (simplifié)
VULN_SCRIPTS="vuln"
run_scan 6 "NSE VULN" \
          "nmap -Pn -sV -p$PORTS --script=\"$VULN_SCRIPTS\" -T4 -oN ${DOSSIER}/6-nse-vuln.txt $TARGET" \
          "${DOSSIER}/6-nse-vuln.txt"

# 7. NSE SMB (si 139/445)
if echo "$PORTS" | grep -qE "139|445"; then
  SMB_PORTS=$(echo "$PORTS" | grep -E "139|445" | tr '\n' ',' | sed 's/,$//')
  run_scan 7 "NSE SMB" \
            "nmap -Pn -sV -p$SMB_PORTS --script=\"smb-enum-shares\" -T4 -oN ${DOSSIER}/7-nse-smb.txt $TARGET" \
            "${DOSSIER}/7-nse-smb.txt"
else
  echo -e "${YELLOW}Pas de ports SMB (139/445)${NC}"
fi

# 8. NSE SSH (si 22)
if echo "$PORTS" | grep -q "22"; then
  run_scan 8 "NSE SSH" \
            "nmap -Pn -sV -p22 --script=\"ssh-auth-methods\" -T4 -oN ${DOSSIER}/8-nse-ssh.txt $TARGET" \
            "${DOSSIER}/8-nse-ssh.txt"
else
  echo -e "${YELLOW}Pas de port SSH (22)${NC}"
fi

echo -e "\n${GREEN}Terminé! Résultat dans: $FULL_SCAN${NC}"
